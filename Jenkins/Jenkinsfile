pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:2-alpine'
                }
            }
            steps {
                echo 'running build stage'
                sh 'python -m py_compile agileStyle.py'
            }
        }
 
        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
                echo 'running test stage'
                
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }      
    }
}
