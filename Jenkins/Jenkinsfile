pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.5'
                }
            }
            steps {
                echo 'running build stage'
                sh 'python -m py_compile agileStyle.py'
            }
        }
 
        stage('Test') {
            agent {
                docker {
                    image 'python:3.5'
                }
            }
            steps {
                echo 'running test stage'
                sh 'nosetests AgileStyleTest.py'
            }
            post {
                always {
                    junit 'nosetests --with-xunit AgileStyleTest.py'
                }
            }
        }
                           
                           
    }      
    
}
